# TrackFin - Environment Variables
                
# Demo Mode Configuration
VITE_ENABLE_DEMO_AUTH=false

# --- Backend Configuration ---
# VITE_BACKEND_URL is used by the Vite dev server proxy
VITE_BACKEND_URL=http://127.0.0.1:8000

# VITE_API_BASE_URL is the absolute base URL for API calls.
# Note: The application automatically handles the /v1/trackfin prefixing in services/api.js.

# Local Development (Default)
VITE_API_BASE_URL=http://127.0.0.1:8000/api

# Production Server (Uncomment to use)
# VITE_API_BASE_URL=https://adarsh-mishra.kryotek.in/api

# Disable mock data to ensure real API connectivity and security
VITE_USE_MOCK_DATA=false
